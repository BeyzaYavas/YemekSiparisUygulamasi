@using YemekSiparisProjesi.Models;
@model Yiyecek
@{
    ViewBag.Title = "yiyecekEkle";
}


<div class="heading_container heading_center">
    <h2>
        YİYECEK EKLE
    </h2>
</div>

<div class="col-lg-10 mx-auto">
    <form action="/Yiyecek/yiyecekEkle" method="post" role="form">
        <div class="form-group">
            <label for="exampleInputEmail1">Yiyecek Adı</label>
            @if (Model.YiyecekAd == null)
            {
                <input value="" type="text" class="form-control" id="exampleInputEmail1" placeholder="Yiyecek Adını Giriniz" name="YiyecekAd">
            }
            else
            {
                <input value="@Model.YiyecekAd" type="text" class="form-control" id="exampleInputEmail1" placeholder="Yiyecek Adını Giriniz" name="YiyecekAd">
            }
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Yiyecek Fiyatı</label>
            @if (Model.YiyecekAd == null)
            {
                <input value="" type="number" class="form-control" id="exampleInputEmail1" placeholder="Fiyat" name="YiyecekFiyat">
            }
            else
            {
                <input value="@Model.YiyecekFiyat" type="number" class="form-control" id="exampleInputEmail1" placeholder="Fiyat" name="YiyecekFiyat">
            }
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Yiyecek Adet</label>
            @if (Model.YiyecekAd == null)
            {
                <input value="" type="number" class="form-control" id="exampleInputEmail1" placeholder="Yiyecek Adet" name="YiyecekAdet">
            }
            else
            {
                <input value="@Model.YiyecekAdet" type="number" class="form-control" id="exampleInputEmail1" placeholder="Yiyecek Adet" name="YiyecekAdet">
            }
        </div>
        <button type="submit" class="btn btn-info">Kaydet</button>
    </form>
</div>
