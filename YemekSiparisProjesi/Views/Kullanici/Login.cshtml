
@using YemekSiparisProjesi.Models


@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>

    <title>Giriş Ekranı</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Content/css/loginstyle.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">HOŞGELDİNİZ</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-user-o"></span>
                        </div>
                        <h3 class="text-center mb-4">GİRİŞ YAP</h3>
                        <div class="w-100 text-md-center">
                            @if (ViewBag.mesaj != null)
                            {
                                <p class="alert-danger"> @ViewBag.mesaj</p>
                            }
                        </div>
                        <form action="/Kullanici/Login" method="post" class="login-form">
                            <div class="form-group">
                                <input type="text" class="form-control rounded-left" placeholder="Ad" name="KullaniciAd" id="inputAd" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control rounded-left" placeholder="Soyad" name="KullaniciSoyad" id="inputSoyad" required>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control rounded-left" placeholder="Mail Adres" name="MailAdress" id="inputEmail" required>
                            </div>
                            <div class="form-group d-flex">
                                <input type="password" class="form-control rounded-left" placeholder="Şifre" name="KullaniciSifre" id="inputPassword" required>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary rounded submit px-3">Giriş Yap</button>
                            </div>
                            <div class="form-group d-md-flex">

                                <div class="w-100 text-md-center">
                                    <a href="/Kullanici/Register">Kayıt Ol</a>
                                </div>

                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>

</body>
</html>

