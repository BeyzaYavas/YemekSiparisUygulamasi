@using YemekSiparisProjesi.Models;
@model List<Kurye>
@{
    ViewBag.Title = "kuryeListele";
}


<div class="col-md-12">
    <div class="table-responsive">
        <div class="heading_container heading_center">
            <h2>
                KURYELER
            </h2>
        </div>
        @if (User.IsInRole("İşletme"))
        {
            <div><a href="/Kurye/KuryeEkle"><button type="button" class="btn btn-danger btn-sm">Kurye Ekle</button></a></div>
        }

        <br />
        <table class="table table-hover table-primary">
            <thead>
                <tr>
                    <th scope="col">Kurye Numarası</th>
                    <th scope="col">Çalıştığı İşletme Numarası</th>
                    <th scope="col">Kurye Adı</th>
                    <th scope="col">Kurye Soyadı</th>
                    <th scope="col">Kurye Telefon Numarası</th>
                    <th scope="col">Kurye Ekle</th>
                    <th scope="col">Kurye Güncelle</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {

                    <tr>
                        <td>@item.KuryeNo</td>
                        <td>@item.IsletmeNo</td>
                        <td>@item.KuryeAd</td>
                        <td>@item.KuryeSoyad</td>
                        <td>@item.KuryeTelNo</td>
                        <td><a href="/Kurye/KuryeEkle/@item.KuryeNo"><button type="button" class="btn btn-danger btn-sm">Ekle</button></a></td>
                        <td><a href="/Kurye/KuryeGuncelle/@item.KuryeNo"><button type="button" class="btn btn-warning btn-sm">Güncelle</button></a></td>
                    </tr>

                }
            </tbody>

        </table>
    </div>
</div>

