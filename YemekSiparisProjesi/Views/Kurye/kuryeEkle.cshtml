@using YemekSiparisProjesi.Models;
@model Kurye
@{
    ViewBag.Title = "kuryeEkle";
}


<div class="heading_container heading_center">
    <h2>
        KURYE EKLE
    </h2>
</div>
<div class="col-lg-10 mx-auto">
    <form action="/Kurye/KuryeEkle" method="post" role="form">      
        <div class="form-group">
            <label for="exampleInputEmail1">Kurye Adı</label>
            @if (Model.KuryeAd == null)
            {
                <input value="" type="text" class="form-control" id="exampleInputEmail1" placeholder="Kurye Adını Giriniz" name="KuryeAd">
            }
            else
            {
                <input value="@Model.KuryeAd" type="text" class="form-control" id="exampleInputEmail1" placeholder="Kurye Adını Giriniz" name="KuryeAd">
            }
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Kurye Soyadı</label>
            @if (Model.KuryeAd == null)
            {
                <input value="" type="text" class="form-control" id="exampleInputEmail1" placeholder="Kurye Soyadını Giriniz" name="KuryeSoyad">
            }
            else
            {
        <input value="@Model.KuryeSoyad" type="text" class="form-control" id="exampleInputEmail1" placeholder="Kurye Soyadını Giriniz" name="KuryeSoyad">
            }
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Kuryenin Ekleneceği İşletme</label>
            @if (Model.KuryeAd == null)
            {
                <input value="" type="number" class="form-control" id="exampleInputEmail1" placeholder="İşletme No" name="IsletmeNo">
            }
            else
            {
                <input value="@Model.IsletmeNo" type="number" class="form-control" id="exampleInputEmail1" placeholder="İşletme No" name="IsletmeNo">
            }
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Kurye Telefon Numarası</label>
            @if (Model.KuryeAd == null)
            {
                <input value="" type="number" class="form-control" id="exampleInputEmail1" placeholder="Telefon Numarası" name="KuryeTelno">
            }
            else
            {
        <input value="@Model.KuryeTelNo" type="number" class="form-control" id="exampleInputEmail1" placeholder="Telefon Numarası" name="KuryeTelno">
            }
        </div>
      
        <button type="submit" class="btn btn-info">Kaydet</button>
    </form>
</div>



