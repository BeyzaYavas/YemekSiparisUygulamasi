@using YemekSiparisProjesi.Models;
@model Isletme

@{
    ViewBag.Title = "IsletmeEkle";
}


<div class="heading_container heading_center">
    <h2>
        İŞLETME EKLE
    </h2>
</div>


<div class="col-lg-10 mx-auto">
    <form action="/Isletme/IsletmeEkle" method="post" role="form">
        @if (Model != null)
        {
            <label>İşletme No = @Model.IsletmeNo </label>
            <input type="hidden" name="IsletmeNo" value="@Model.IsletmeNo" />
        }
        <div class="form-group">
            <label for="exampleInputEmail1">İşletme Adı</label>
            @if (Model.IsletmeAd == null)
            {
                <input value=" " type="text" class="form-control" id="exampleInputEmail1" placeholder="İşletme Adını Giriniz" name="IsletmeAd">
            }
            else
            {
                <input value="@Model.IsletmeAd" type="text" class="form-control" id="exampleInputEmail1" placeholder="İşletme Adını Giriniz" name="IsletmeAd">
            }
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">İşletme Telefon Numarası</label>
            @if (Model.IsletmeAd == null)
            {
                <input value="" type="text" class="form-control" id="exampleInputEmail1" placeholder="Telefon Numarası Giriniz" name="IsletmeTelNo">
            }
            else
            {
                <input value="@Model.IsletmeTelNo" type="text" class="form-control" id="exampleInputEmail1" placeholder="Telefon Numarası Giriniz" name="IsletmeTelNo">
            }
        </div>

        <button type="submit" class="btn btn-info">Kaydet</button>
    </form>
</div>







